# Application
APP_NAME=SmartPDF Shrinker
DEBUG=false
SECRET_KEY=change-me-to-something-secret

# Storage (local or minio)
STORAGE_BACKEND=local
STORAGE_PATH=/app-data/files

# MinIO (if using STORAGE_BACKEND=minio)
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=password
MINIO_BUCKET=pdf-files

# Database (SQLite or PostgreSQL)
DATABASE_URL=sqlite:///./data/db.sqlite3
# DATABASE_URL=postgresql://pdfadmin:pdfpass@db:5432/pdfdb

# Redis
REDIS_URL=redis://redis:6379/0

# File Upload Constraints
MAX_UPLOAD_SIZE=52428800
